@page "/checkout/{urlEncoded}"

<MudContainer Style="height: 100vh; width: 100vw; padding: 0; margin: 0;">
    <MudText Typo="Typo.h5" Class="mb-2" Style="padding: 16px; text-align: center; font-size: 1.5rem;">
        Pagamento Seguro
    </MudText>

    <MudPaper Elevation="4" Style="height: calc(100vh - 72px); width: 100%; padding: 0; margin: 0;">
        <iframe src="@DecodedUrl" style="width: 100%; height: 100%; border: none;">
            Seu navegador não suporta iframes.
        </iframe>
    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public string UrlEncoded { get; set; }

    private string DecodedUrl => Uri.UnescapeDataString(UrlEncoded);
}
